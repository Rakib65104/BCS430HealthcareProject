<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="rakib.bcs430healthcareproject.DoctorDashboardController"
            stylesheets="@app.css">

    <!-- Top bar -->
    <top>
        <HBox style="-fx-background-color: #0f766e; -fx-padding: 16;" spacing="10">
            <Label text="Doctor Dashboard"
                   style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: 800;"/>
        </HBox>
    </top>

    <!-- Main content -->
    <center>
        <VBox style="-fx-padding: 28;" spacing="16">

            <VBox styleClass="card" style="-fx-padding: 20;" spacing="10">
                <Label fx:id="welcomeLabel" text="Welcome to Your Doctor Dashboard"
                       style="-fx-font-size: 22; -fx-font-weight: 800; -fx-text-fill: #0f766e;"/>
                <Label fx:id="doctorNameLabel" text="Doctor Name: [Not loaded]"
                       style="-fx-font-size: 14; -fx-text-fill: #0f172a;"/>
                <Label fx:id="doctorEmailLabel" text="Email: [Not loaded]"
                       style="-fx-font-size: 14; -fx-text-fill: #0f172a;"/>
            </VBox>

            <VBox styleClass="card" style="-fx-padding: 20;" spacing="12">
                <Label text="Quick Actions"
                       style="-fx-font-size: 16; -fx-font-weight: 800; -fx-text-fill: #0f766e;"/>

                <Button fx:id="patientsButton" text="My Patients" onAction="#onPatients"
                        styleClass="primary-btn" style="-fx-padding: 12 18;"/>
                <Button fx:id="scheduleButton" text="Schedule" onAction="#onSchedule"
                        styleClass="ghost-btn" style="-fx-padding: 12 18;"/>
                <Button fx:id="profileButton" text="My Profile" onAction="#onProfile"
                        styleClass="ghost-btn" style="-fx-padding: 12 18;"/>
            </VBox>

            <HBox spacing="10" style="-fx-alignment: center-right;">
                <Button fx:id="logoutButton" text="Logout" onAction="#onLogout"
                        style="-fx-background-color: #ef4444; -fx-text-fill: white; -fx-padding: 12 18; -fx-font-weight: 800; -fx-background-radius: 12;"/>
            </HBox>

        </VBox>
    </center>

</BorderPane>