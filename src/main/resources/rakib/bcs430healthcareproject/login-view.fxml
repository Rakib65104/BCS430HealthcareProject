<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="rakib.bcs430healthcareproject.LoginController"
            styleClass="root">

    <center>
        <StackPane>
            <VBox styleClass="card" maxWidth="420" spacing="14">
                <padding>
                    <Insets top="26" right="26" bottom="26" left="26"/>
                </padding>

                <Label text="Welcome!" styleClass="title"/>
                <Label text="Log in to continue" styleClass="subtitle"/>

                <VBox spacing="8">
                    <Label text="Email" styleClass="label"/>
                    <TextField fx:id="emailField" promptText="name@example.com"/>
                </VBox>

                <VBox spacing="8">
                    <Label text="Password" styleClass="label"/>
                    <PasswordField fx:id="passwordField" promptText="••••••••"/>
                </VBox>

                <Label fx:id="errorLabel" text="" managed="false" visible="false" styleClass="error"/>

                <Button text="Log In" onAction="#onLogin"
                        styleClass="primary-btn"
                        maxWidth="1.7976931348623157E308"/>

                <HBox spacing="6" styleClass="row-center">
                    <Label text="No account?" styleClass="muted"/>
                    <Hyperlink text="Create one" onAction="#onGoSignup"/>
                </HBox>
            </VBox>
        </StackPane>
    </center>

</BorderPane>
