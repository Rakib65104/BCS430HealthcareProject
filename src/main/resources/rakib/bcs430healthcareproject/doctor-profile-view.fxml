<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="rakib.bcs430healthcareproject.DoctorProfileController"
            stylesheets="@app.css">

    <!-- Top Bar -->
    <top>
        <VBox style="-fx-background-color: #0f766e; -fx-padding: 15;">
            <HBox spacing="15" style="-fx-alignment: center-left;">
                <Button fx:id="backButton" onAction="#onBack" text="â† Back"
                        style="-fx-padding: 8; -fx-font-size: 12; -fx-background-color: rgba(255,255,255,0.18); -fx-text-fill: white;"/>
                <Label fx:id="titleLabel" text="Doctor Profile"
                       style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;" />
            </HBox>
            <Label fx:id="statusLabel" text=""
                   style="-fx-text-fill: #dcfce7; -fx-font-size: 11; -fx-padding: 5 0 0 0;"
                   visible="false" managed="false"/>
        </VBox>
    </top>

    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;" hbarPolicy="NEVER">
            <VBox style="-fx-padding: 30; -fx-spacing: 20; -fx-background-color: transparent;">

                <!-- Basic Information -->
                <VBox styleClass="card" style="-fx-padding: 20; -fx-spacing: 15;">
                    <Label text="Basic Information" style="-fx-text-fill: #0f766e; -fx-font-size: 16; -fx-font-weight: bold;"/>

                    <VBox spacing="5">
                        <Label text="Full Name *" style="-fx-text-fill: #0f172a; -fx-font-weight: bold;"/>
                        <TextField fx:id="nameField" promptText="Dr. Full Name"/>
                    </VBox>

                    <HBox spacing="20">
                        <VBox spacing="5" HBox.hgrow="ALWAYS">
                            <Label text="Specialty *" style="-fx-text-fill: #0f172a; -fx-font-weight: bold;"/>
                            <TextField fx:id="specialtyField" promptText="Cardiology, Dermatology, etc."/>
                        </VBox>
                        <VBox spacing="5" style="-fx-min-width: 180;">
                            <Label text="License # (NPI/License)" style="-fx-text-fill: #0f172a; -fx-font-weight: bold;"/>
                            <TextField fx:id="licenseField" promptText="Optional"/>
                        </VBox>
                    </HBox>

                    <VBox spacing="5">
                        <Label text="Bio" style="-fx-text-fill: #0f172a; -fx-font-weight: bold;"/>
                        <TextArea fx:id="bioArea"
                                  promptText="Short description about your experience, education, and care approach..."
                                  wrapText="true"
                                  style="-fx-min-height: 90;"/>
                    </VBox>
                </VBox>

                <!-- Clinic / Location -->
                <VBox styleClass="card" style="-fx-padding: 20; -fx-spacing: 15;">
                    <Label text="Clinic / Location" style="-fx-text-fill: #0f766e; -fx-font-size: 16; -fx-font-weight: bold;"/>

                    <VBox spacing="5">
                        <Label text="Clinic Name *" style="-fx-text-fill: #0f172a; -fx-font-weight: bold;"/>
                        <TextField fx:id="clinicNameField" promptText="Clinic / Practice name"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Address *" style="-fx-text-fill: #0f172a; -fx-font-weight: bold;"/>
                        <TextField fx:id="addressField" promptText="123 Main St"/>
                    </VBox>

                    <HBox spacing="20">
                        <VBox spacing="5" HBox.hgrow="ALWAYS">
                            <Label text="City *" style="-fx-text-fill: #0f172a; -fx-font-weight: bold;"/>
                            <TextField fx:id="cityField" promptText="Farmingdale"/>
                        </VBox>
                        <VBox spacing="5" style="-fx-min-width: 90;">
                            <Label text="State *" style="-fx-text-fill: #0f172a; -fx-font-weight: bold;"/>
                            <TextField fx:id="stateField" promptText="NY"/>
                        </VBox>
                        <VBox spacing="5" style="-fx-min-width: 120;">
                            <Label text="ZIP *" style="-fx-text-fill: #0f172a; -fx-font-weight: bold;"/>
                            <TextField fx:id="zipField" promptText="11735"/>
                        </VBox>
                    </HBox>
                </VBox>

                <!-- Office Details -->
                <VBox styleClass="card" style="-fx-padding: 20; -fx-spacing: 15;">
                    <Label text="Office Details" style="-fx-text-fill: #0f766e; -fx-font-size: 16; -fx-font-weight: bold;"/>

                    <HBox spacing="20">
                        <VBox spacing="5" HBox.hgrow="ALWAYS">
                            <Label text="Phone" style="-fx-text-fill: #0f172a; -fx-font-weight: bold;"/>
                            <TextField fx:id="phoneField" promptText="(555) 555-5555"/>
                        </VBox>
                        <VBox spacing="5" HBox.hgrow="ALWAYS">
                            <Label text="Email (Public)" style="-fx-text-fill: #0f172a; -fx-font-weight: bold;"/>
                            <TextField fx:id="publicEmailField" promptText="office@example.com"/>
                        </VBox>
                    </HBox>

                    <VBox spacing="5">
                        <Label text="Accepting New Patients" style="-fx-text-fill: #0f172a; -fx-font-weight: bold;"/>
                        <CheckBox fx:id="acceptingNewPatientsCheck" text="Yes, accepting new patients"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Insurance Accepted" style="-fx-text-fill: #0f172a; -fx-font-weight: bold;"/>
                        <TextArea fx:id="insuranceArea" promptText="List insurances (comma-separated): Aetna, BCBS, United..."
                                  wrapText="true" style="-fx-min-height: 70;"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Office Hours" style="-fx-text-fill: #0f172a; -fx-font-weight: bold;"/>
                        <TextArea fx:id="hoursArea" promptText="Mon-Fri 9am-5pm, Sat 9am-1pm..."
                                  wrapText="true" style="-fx-min-height: 70;"/>
                    </VBox>
                </VBox>

                <!-- Appointment Preferences -->
                <VBox styleClass="card" style="-fx-padding: 20; -fx-spacing: 15;">
                    <Label text="Appointment Preferences" style="-fx-text-fill: #0f766e; -fx-font-size: 16; -fx-font-weight: bold;"/>

                    <VBox spacing="5">
                        <Label text="Visit Type" style="-fx-text-fill: #0f172a; -fx-font-weight: bold;"/>
                        <ComboBox fx:id="visitTypeComboBox" promptText="Select visit type"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Notes" style="-fx-text-fill: #0f172a; -fx-font-weight: bold;"/>
                        <TextArea fx:id="notesArea" promptText="Any additional notes for patients..." wrapText="true"
                                  style="-fx-min-height: 80;"/>
                    </VBox>
                </VBox>

                <VBox style="-fx-min-height: 30;" />
            </VBox>
        </ScrollPane>
    </center>

    <!-- Bottom Buttons -->
    <bottom>
        <HBox style="-fx-background-color: #ffffff; -fx-padding: 15; -fx-alignment: center-right; -fx-spacing: 10; -fx-border-color: #d1e7e4; -fx-border-width: 1 0 0 0;">
            <Button fx:id="editButton" onAction="#onEdit" text="Edit Profile"
                    styleClass="primary-btn"
                    style="-fx-padding: 12 24; -fx-font-size: 12;"/>

            <Button fx:id="saveButton" onAction="#onSave" text="Save Changes"
                    style="-fx-padding: 12 24; -fx-font-size: 12; -fx-background-color: #16a34a; -fx-text-fill: white;"
                    managed="false" visible="false"/>

            <Button fx:id="cancelButton" onAction="#onCancel" text="Cancel"
                    style="-fx-padding: 12 24; -fx-font-size: 12; -fx-background-color: #ef4444; -fx-text-fill: white;"
                    managed="false" visible="false"/>
        </HBox>
    </bottom>
</BorderPane>