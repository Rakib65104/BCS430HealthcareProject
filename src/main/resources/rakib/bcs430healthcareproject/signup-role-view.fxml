<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="rakib.bcs430healthcareproject.SignupRoleController"
            styleClass="root">

    <center>
        <StackPane>
            <VBox styleClass="card" maxWidth="520" spacing="16">
                <padding>
                    <Insets top="26" right="26" bottom="26" left="26"/>
                </padding>

                <Label text="Create Account" styleClass="title"/>
                <Label text="Choose your account type" styleClass="subtitle"/>

                <HBox spacing="14">
                    <VBox styleClass="choice-card" spacing="10" HBox.hgrow="ALWAYS">
                        <Label text="Patient" styleClass="choice-title"/>
                        <Label text="Find doctors nearby and manage your care."
                               wrapText="true" styleClass="muted"/>
                        <Button text="Continue as Patient" onAction="#onPatient"
                                styleClass="primary-btn"
                                maxWidth="1.7976931348623157E308"/>
                    </VBox>

                    <VBox styleClass="choice-card" spacing="10" HBox.hgrow="ALWAYS">
                        <Label text="Doctor" styleClass="choice-title"/>
                        <Label text="Create a profile so patients can find you."
                               wrapText="true" styleClass="muted"/>
                        <Button text="Continue as Doctor" onAction="#onDoctor"
                                styleClass="primary-btn"
                                maxWidth="1.7976931348623157E308"/>
                    </VBox>
                </HBox>

                <Button text="Back to Login" onAction="#onBack"
                        styleClass="ghost-btn"
                        maxWidth="1.7976931348623157E308"/>
            </VBox>
        </StackPane>
    </center>

</BorderPane>
